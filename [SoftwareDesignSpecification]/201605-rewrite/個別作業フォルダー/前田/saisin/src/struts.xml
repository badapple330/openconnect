<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources"
		value="com.internousdev.prototype1607.property.Login,
		com.internousdev.prototype1607.property.Mongo"></constant>
	<package name="com.internousdev.prototype1607" extends="struts-default">
		<!-- ログイン成功すればメインページに遷移 -->
		<action name="LoginAction"
			class="com.internousdev.prototype1607.action.LoginAction" method="execute">
			<result name="success">main.jsp</result>
			<result name="error">login.jsp</result>
		</action>
		<!-- ログインページに遷移 -->
		<action name="GoLoginAction"
			class="com.internousdev.prototype1607.action.GoLoginAction" method="execute">
			<result name="success">login.jsp</result>
		</action>
		<!-- ログインページからmysqli画面に遷移 -->
		<action name="newUser"
			class="com.internousdev.prototype1607.action.LoginAction" method="mysqli">
			<result name="success">mysqli.jsp</result>
		</action>

		<!-- メインページからMySQLSUD画面に遷移 -->
		<action name="GoMySQLAction"
			class="com.internousdev.prototype1607.action.GoMySQLAction" method="execute">
			<result name="success">mysqlsud.jsp</result>
		</action>

		<!-- メインページからMongo画面に遷移 -->
		<action name="GoMongoAction"
			class="com.internousdev.prototype1607.action.GoMongoAction" method="execute">
			<result name="success">mongo.jsp</result>
		</action>

		<!-- メインページからD3.js画面に遷移 -->
		<action name="GoGraphAction"
			class="com.internousdev.prototype1607.action.GoGraphAction" method="execute">
			<result name="success">graph.jsp</result>
		</action>

		<!-- mysqli画面からメインページに遷移 -->
		<action name="UserInsertAction"
			class="com.internousdev.prototype1607.action.UserInsertAction"
			method="execute">
			<result name="success">main.jsp</result>
			<result name="error">login.jsp</result>
		</action>

		<!-- メインページ画面に遷移 -->
		<action name="GoMainAction"
			class="com.internousdev.prototype1607.action.GoMainAction" method="execute">
			<result name="success">main.jsp</result>
		</action>

		<!-- Mongo画面からMongoInsertに遷移 -->
		<action name="MongoInsertAction"
			class="com.internousdev.prototype1607.action.MongoInsertAction" method="execute">
			<result name="success">mongoinsert.jsp</result>
		</action>
		<!-- Mongo画面からMongoSelectに遷移 -->
		<action name="MongoSelectAction"
			class="com.internousdev.prototype1607.action.MongoSelectAction" method="execute">
			<result name="success">mongoselect.jsp</result>
		</action>

		<!-- ユーザー情報の表示 -->
		<action name="UserSelect"
		class="com.internousdev.prototype1607.action.UserSelectAction" method="execute">
		<result name="success">mysqlsud.jsp</result>
		<result name="error">mysqlsud.jsp</result>
		</action>
		<!-- Updateの画面 -->
		<action name="UserUpdate"
		class="com.internousdev.prototype1607.action.UserUpdateAction" method="execute">
		<result name="success">mysqlsud.jsp</result>
		<result name="error">mysqlsud.jsp</result>
		<result name="input">mysqlsud.jsp</result>
		</action>
		<!-- Deleteの画面 -->
		<action name="UserDelete"
		class="com.internousdev.prototype1607.action.UserDeleteAction" method="execute">
		<result name="success">mysqlsud.jsp</result>
		<result name="error">mysqlsud.jsp</result>
		</action>
	</package>
</struts>